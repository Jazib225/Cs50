time.sleep(2)

for i in range(int(chances)):
    answer_ExtraCredit = input('This is an extra credit question if you get this right you will gain another chance\nExtra Credit: What is the capital of Florida?\n(a) Indianapolis\n(b) Tallahase\n(c) Boston\n(d) India\n\n Anwer: ')
    correct_ExtraCredit = 'b'
    if answer_ExtraCredit == correct_ExtraCredit:
        better_Chaces = better_Chaces + 1
        print('Nice you got a extra chance, you now have ' + str(better_Chaces) + ' chances left\n\n')
        break
    else:
        print('You got the Extra Credit question wrong, You missed out on a extra chance\n\n')
time.sleep(2)

#question_5 = print('What is the best code function?\n(a) print\n(b) Ifs\n(c) functions\n(d) none of the above')
correct_5 = "a"
for i in range(int(chances)):
    answer_5 = input("Question 5: What is the best code function?\n(a) print\n(b) Ifs\n(c) functions\n(d) none of the above \n \n Answer: ")
