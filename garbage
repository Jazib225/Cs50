    if (answer_2 == correct_2):
        print('You have ', better_Chaces, ' chances left')
        print("Correct! Good Job.\n ")
        score = score + 1
        break
    else:
        print('You suck cause you got it wrong!')
        time.sleep(0.5)
        print('The correct answer is ' + correct_2, "")
        better_Chaces = int(better_Chaces) -1
