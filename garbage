import time
import sys
print('Welcome to the  quiz game')
time.sleep(1)
print("Answer in lowercase letters")
time.sleep(2)
print('you have 5 chances, if you run out of chances you lose')
print('Also there will be an Extra credit question that if you get correct you will gain another chance')
chances = 1
chances = str(chances)
time.sleep(2)

better_Chaces = 5
score = 0
    
#question_1 = print('Is the earth flat?\n(a) Yes\n(b) No\n(c) Idefinitely\n(d) Never')
correct_1 = "c"
for i in range(int(chances)) :
    answer_1 = input("Question 1: Is the earth flat?\n(a) Yes\n(b) No\n(c) Idefinitely\n(d) Never\n \n Answer: ")
    if (answer_1 == correct_1):
        print("Correct! Good Job.\n ")
        print('You have ', better_Chaces, ' chances left')
        score = score + 1
        break
    else:
        print('You suck cause you got it wrong!')
        time.sleep(0.5)
        print('The correct answer is ' + correct_1, "")
        better_Chaces = int(better_Chaces) -1
        print('You have ', better_Chaces, ' chances left\n \n')

time.sleep(2)

#question_2 = print('How many months have atleast 28 days in them?\n(a) 12\n(b) 6\n(c) 1\n(d) None of the above')
correct_2 = "a"
for i in range(int(chances)):
